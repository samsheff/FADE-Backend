{
  "name": "polymarket-terminal-backend",
  "version": "1.0.0",
  "description": "Deterministic backend for Polymarket prediction market trading terminal",
  "main": "dist/server/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server/server.ts",
    "build": "tsc",
    "start": "node dist/server/server.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:generate": "prisma generate",
    "db:reset": "rm -f prisma/dev.db && pnpm db:migrate --name init && pnpm db:seed",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "verify": "bash scripts/verify-api.sh",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "polymarket",
    "trading",
    "prediction-markets",
    "backend"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.5",
    "@prisma/client": "^6.19.2",
    "fastify": "^5.7.2",
    "lru-cache": "^11.2.5",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "viem": "^2.45.1",
    "ws": "^8.18.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "prisma": "^6.19.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
